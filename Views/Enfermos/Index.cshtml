@model IEnumerable<MvcCoreProcedimientos.Models.Enfermo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<a asp-controller="Enfermos" asp-action="Create">Crear</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nss)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nss)
            </td>
            <td>
                @* <a asp-action="Edit" asp-route-="@item.Inscripcion">Edit</a> | *@
                <a asp-action="Details" asp-route-inscripcion="@item.Inscripcion">Details</a> |
                <a asp-action="Delete" asp-route-inscripcion="@item.Inscripcion">Delete</a>
                <a asp-action="DeleteRaw" asp-route-inscripcion="@item.Inscripcion">Delete Raw</a>
            </td>
        </tr>
}
    </tbody>
</table>
